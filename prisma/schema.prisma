generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Studyreclist {
  id        Int       @id @default(autoincrement())
  email     String    @db.VarChar(255)
  author    String    @db.VarChar(255)
  title     String    @db.VarChar(255)
  path      String    @db.VarChar(255)
  views     Int       @default(0)
  createdAt DateTime  @default(now()) @map("created_at") @db.Timestamptz
  user      User      @relation(fields: [email], references: [email])

  @@map("studyreclist")
}

model Lesson {
  id        Int       @id @default(autoincrement())
  email     String    @db.VarChar(255)
  author    String    @db.VarChar(255)
  title     String    @db.VarChar(255)
  path      String    @db.VarChar(255)
  views     Int       @default(0)
  analysis  String    @default("N") @db.VarChar(1)
  createdAt DateTime  @default(now()) @map("created_at") @db.Timestamptz
  user      User?     @relation(fields: [email], references: [email])

  @@map("lessons")
}

model User {
  id              String    @id @default(uuid()) @db.Uuid
  authKey         String    @map("auth_key") @db.Uuid
  createdAt       DateTime  @default(now()) @map("created_at") @db.Timestamp()
  loginAt         DateTime? @map("login_at") @db.Timestamp()
  profileImageUrl String?   @map("profile_image_url") @db.Text
  role            String    @db.VarChar(20)
  name            String    @db.VarChar(255)
  email           String    @db.Text @unique
  password        String    @db.Text
  lessons         Lesson[]
  studyreclist    Studyreclist[]

  @@map("users")
}

model NodePattern {
  id        Int      @id @default(autoincrement())
  text1     String
  text2     String
  text3     String?
  nodeShape String?
  x         Float
  y         Float
  frequency Int      @default(1)
  lessonId  Int
  
  @@unique([text1, text2])
}

model ConnectionPattern {
  id            Int      @id @default(autoincrement())
  sourceText1   String
  targetText1   String
  lineStyle     String
  frequency     Int      @default(1)
  lessonId      Int
  createdAt     DateTime @default(now())

  @@unique([sourceText1, targetText1])
}